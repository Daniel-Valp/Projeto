{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "node16",
    "rootDir": "./src",
    "outDir": "./dist",

    "types": ["node"], // ðŸ‘ˆ importante para `process.env`

    
    /* PermissÃµes */
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true
  },

  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"]
}
